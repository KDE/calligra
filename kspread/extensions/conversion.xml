        <Example>CARY(12;1.5707) returns 12</Example>
        <Example>CARY(12;0) returns 0</Example>
        <Related>CARX</Related>
        <Related>POLA</Related>
        <Related>POLR</Related>
      </Help>
    </Function>

 <Function>
