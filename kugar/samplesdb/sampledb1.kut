<?xml version="1.0" encoding="UTF-8"?>

<!-- An example Kugar report template. -->


<!DOCTYPE KugarTemplate SYSTEM "kugartemplate.dtd">

<KugarTemplate PageSize="2" PageOrientation="1" TopMargin="40"
	BottomMargin="40" LeftMargin="48" RightMargin="48">
	
	<DataBase>
		<Driver driverType="QMYSQL3" databaseName="kugardb" userName="root" password="" hostName="localhost" />
		<SqlQuery SqlText="SELECT name, software.* FROM salers INNER JOIN software ON salers.NumSaler = software.NumSaler" />
		<GroupBy>
			<GroupHeader Level="0" NameField="name" OrderBy="ASC" />
			<GroupHeader Level="1" NameField="title" OrderBy="ASC" />
		</GroupBy>
	</DataBase>

	<ReportHeader Height="70" PrintFrequency="0">
