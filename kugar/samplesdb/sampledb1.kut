			BorderColor="0,0,0" BorderWidth="1" BorderStyle="1"
			FontFamily="Helvetica" FontSize="16" FontWeight="63" FontItalic="0"
			HAlignment="1" VAlignment="1" WordWrap="0"
			DataType="0" DateFormat="0" Precision="0" Currency="36" 
			NegValueColor="255,0,0" CommaSeparator="0" />
